<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp"
    tools:showIn="@layout/activity_vkpage">

    <ImageView
        android:id="@+id/vkpage_new_post_avatar_round"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/vk_page_avatar_round_small" />

    <TextView
        android:id="@+id/vkpage_new_post_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/vkpage_new_post_avatar_round"
        android:text="What's new?" />

    <ImageView
        android:id="@+id/vkpage_new_post_new_photo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/vkpage_new_post_circle"
        app:srcCompat="@drawable/ic_photo_camera" />

    <ImageView
        android:id="@+id/vkpage_new_post_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_round_recursion" />
</RelativeLayout>